<AuthorizeView>
    <Authorized>
    
        @if (context.User.FindFirst(ClaimTypes.Role)?.Value == "Teacher") {
        <div class="nav-item px-3">
             <NavLink class="nav-link" href="studentoverview">
                 <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> TumOgrenciler
             </NavLink>
        </div>
        }
        @if (context.User.FindFirst(ClaimTypes.Role)?.Value == "Student")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/student/selectlesson">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Select Lesson
